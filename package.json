{
  "name": "telehealth-backend",
  "version": "1.0.0",
  "description": "Tele-mental-health backend with AWS CDK and Lambda",
  "scripts": {
    "build": "chmod +x scripts/build-lambdas.sh && ./scripts/build-lambdas.sh",
    "test": "cd src/lambdas/patients && npm test",
    "test:local": "DYNAMODB_ENDPOINT=http://localhost:8000 npm test",
    "seed": "ts-node scripts/seedPatients.ts",
    "start:local": "echo 'Use AWS SAM CLI or serverless-offline for local development'",
    "cdk:synth": "cd cdk && cdk synth",
    "cdk:deploy": "cd cdk && cdk deploy --require-approval never",
    "cdk:destroy": "cd cdk && cdk destroy"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0"
  }
}
