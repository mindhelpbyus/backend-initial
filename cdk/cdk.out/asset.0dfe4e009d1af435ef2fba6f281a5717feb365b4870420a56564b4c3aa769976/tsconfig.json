{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "../../..",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "../../../shared/**/*"]
}
